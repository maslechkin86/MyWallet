@model IEnumerable<MyWallet.WebUI.Models.CategoryViewModel>

@{
	ViewBag.Title = "List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
	<div class="panel-heading">
		<h3>All Categories</h3>
	</div>
	<div class="panel-body">
		<table class="table table-striped table-condensed table-bordered">
			<tr>
				<th>Name</th>
				<th class="text-right">DirectionType</th>
				<th class="text-center">Actions</th>
			</tr>
			@foreach (var item in Model) {
				<tr>
					<td>
						@Html.ActionLink(item.Name, "Edit",
							new { categoryId = item.Id })
					</td>
					<td class="text-right">
						@item.DirectionType.ToString()
					</td>
					<td class="text-center">
						@Html.ActionLink("Delete", "Delete",
							new { categoryId = item.Id },
							new { @class = "btn btn-default btn-xs" })
					</td>
				</tr>
			}
		</table>
	</div>
	<div class="panel-footer">
		@Html.ActionLink("Add a new category", "Create", null,
			new {@class = "btn btn-default"})
	</div>
</div>
